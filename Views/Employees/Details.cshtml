               <div class="col-lg-4">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ModifiedById)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ModifiedById)
                    </dd>
               </div>
                <div class="col-lg-4">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ModifiedOn)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ModifiedOn)
                    </dd>
                </div>
           </div>    

        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" class="btn btn-warning float-end" asp-route-id="@Model?.Id">Edit</a>
        <a asp-action="Index" class="btn btn-secondary float-end me-2">Back to List</a>
    </div>
</div>

   